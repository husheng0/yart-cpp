#Stanford Dragon
size 1000 480
#size 100 48
camera -10 0 20 0 0 -1 0 1 0 45
output "stanford-dragon.png"
integrator "BidirectionalPath" 2 2
pixelSampler "JitteredPixelSampler" 4

worldBegin
#point 10 10 20 1 1 1
areaLight 10 10 10 50 50 50 -10 -10 -10 2

objBegin "Mesh"
material "Lambertian"
pushTransform
translate 0 -5 0
scale 100 1 100
v -1 0 -1
v -1 0 1
v  1 0 1
v  1 0 -1
f 1 2 3
f 3 4 1
popTransform
objEnd

objBegin "Mesh"
material "Lambertian"
pushTransform
translate 0 -5 0
include "objs/dragon.obj"
popTransform
refineMesh
buildOCTree 8
objEnd
worldEnd
