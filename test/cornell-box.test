pushTransform
translate -0.5 -0.7 -1.5
scale 0.1 0.1 0.1
sphere 0 0 0 1
popTransform
objEnd

#sphere4
objBegin "Sphere"
#diffuse 0.7 0.5 0.2
#specular 0.2 0.2 0.2
material "Specular" 
pushTransform
translate 0.5 -0.5 -2
scale 0.3 0.6 0.3
sphere 0 0 0 1
popTransform
objEnd

#cube
objBegin "Mesh"
#diffuse 0.5 0.7 0.2
#specular 0.2 0.2 0.2
material "Specular" 1 1 1
pushTransform
translate -0.25 -0.4 -1.8
rotate 0 1 0 30
scale 0.25 0.4 0.2
