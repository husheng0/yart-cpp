#sphere
objBegin "Sphere"
#diffuse 0.7 0.5 0.2
#specular 0.2 0.2 0.2
material "Refraction" 0.7 0.5 0.2
pushTransform
translate 0 -0.7 -1.5
scale 0.1 0.1 0.1
sphere 0 0 0 1
popTransform
objEnd

#sphere2
objBegin "Sphere"
#diffuse 0.7 0.5 0.2
#specular 0.2 0.2 0.2
material "Lambertian" 0.7 0.5 0.2
pushTransform
