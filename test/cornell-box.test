#Cornell Box
size 640 480
camera 0 0 1 0 0 -1 0 1 0 45
output "cornell-box.png"
integrator "DirectLight" 5 4 1
#integrator "BidirectionalPath" 4 4
#pixelSampler "UniformPixelSampler" 4
pixelSampler "AdaptivePixelSampler" 4 16 1024 0.01

worldBegin
#point 0 0.44 -1.5 10 10 10
areaLight 0 0.44 -1.5 20 20 20 0 -1 0 0.3

#red
objBegin "Mesh"
material "Lambertian" 1 0 0

pushTransform
translate 0 0 -3
rotate 0 1 0 60
scale 10 10 1

v -1 +1 0
v -1 -1 0
v +1 -1 0
v +1 +1 0
f 1 2 3
f 1 3 4
popTransform
objEnd

#green
objBegin "Mesh"
pushTransform
translate 0 0 -3
rotate 0 1 0 -60
scale 10 10 1
#diffuse 0 1 0
material "Lambertian" 0 1 0
v -1 +1 0
v -1 -1 0
v +1 -1 0
v +1 +1 0
f 1 2 3
f 1 3 4
popTransform
objEnd

#back
objBegin "Mesh"
pushTransform
scale 10 10 1
translate 0 0 -2
#diffuse 1 1 1
material "Lambertian" 1 1 1
v -1 +1 0
v -1 -1 0
v +1 -1 0
v +1 +1 0
f 1 2 3
f 1 3 4
popTransform
objEnd

#top
objBegin "Mesh"
pushTransform
translate 0 0.5 0
rotate 1 0 0 60
